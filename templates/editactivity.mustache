{{!
    @template format_wplist/editactivity

    This template renders action menu for each course.

    Example context (json):
    {}
}}
<div class="activityactions dropdown align-self-center ml-auto mr-2">
    <a class="p-1" aria-expanded="true" data-toggle="dropdown" href="">
        <i class="fa fa-cog"></i>
    </a>

    <div class="dropdown-menu dropdown-menu-right">
        {{#controls}}
        <a class="dropdown-item" href="{{{url}}}" title="{{{title}}}" {{{attributes}}}>
            <span class="text-primary">{{#pix}} {{icon.pix}}, core, {{alt}} {{/pix}}</span>
            {{{string}}}
        </a>
        {{/controls}}
    </div>
</div>