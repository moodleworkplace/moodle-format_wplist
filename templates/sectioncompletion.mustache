{{!
    @template format_wplist/sectioncompletion

    This template renders action menu for each course.

    Example context (json):
    {
        "hascompletion": true,
        "sectionnumber": 2,
        "completionmodcount": 4,
        "completedmodscount": 2,
        "percentagecompleted": 50
    }
}}
{{#hascompletion}}
<div class="sectionprogress progress ml-auto my-4 d-none d-sm-block">
    <div class="progress-bar bg-info-light"
        id="sectionprogress-{{sectionnumber}}"
        data-completion-modules="{{completionmodcount}}"
        data-completed-modules="{{completedmodscount}}"
        role="progressbar"
        aria-valuenow="{{completionmodcount}}"
        aria-valuemin="0"
        aria-valuemax="100"
        style="width: {{{percentagecompleted}}}%">
        <span class="sr-only">{{percentagecompleted}}% Complete</span>
    </div>
</div>
{{/hascompletion}}