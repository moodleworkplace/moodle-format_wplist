{{!
    @template format_wplist/multisectionpage

    This template renders action menu for each course.

    Example context (json):
    {
        "uniqid": 123456,
        "completioninfo": "completion help icon html",
        "courseactivityclipboard": "course activity clipboard html",
        "courseid": 3,
        "editing": true,
        "sections": [
            {
                "sectionnumber": 1,
                "visible": true,
                "mutedsection": false,
                "editing": true,
                "move": true,
                "availableinfo": true,
                "availabilitymsg": "Not available untill you complete..",
                "name": "Section 1",
                "completion": "<progress>..</progress>",
                "editsection": "<div class='dropdown'>..</div>",
                "expandbtn": true,
                "summary": "This is section 2",
                "accordion": false,
                "coursemodules": "Course modules HTML"
            }
        ]
    }
}}

<div id="format-wplist-{{uniqid}}" class="formatwplistcontent">
    {{{completioninfo}}}
    {{{courseactivityclipboard}}}
    <div class="accordion" id="formatwplist" data-region="section-container" data-is-root="1" data-courseid="{{courseid}}">
        {{#sections}}
            <div id="section-{{sectionnumber}}"
                class="card border-0 b-0 section {{#visible}}bg-white{{/visible}}{{^visible}}bg-gray030{{/visible}}"
                data-region="section"
                data-sectionnumber="{{sectionnumber}}">
                <div
                    class="border-bottom section-header p-0
                        {{#mutedsection}} bg-gray030 {{/mutedsection}}
                        {{#visible}}bg-white{{/visible}}
                        {{^editing}}border-top border-bottom-0{{/editing}}"
                    id="heading{{sectionnumber}}"
                >
                    <div class="d-flex align-items-start">
                        {{#move}}
                            {{> format_wplist/movesection }}
                        {{/move}}
                        {{#availableinfo}}
                            <span class="availability {{#editing}}pl-3{{/editing}}">
                                <button class="btn btn-link p-0" data-toggle="popover" data-html="true" data-content='{{{"availabilitymsg"}}}'>
                                    <i class="icon fa fa-lock"></i>
                                </button>
                            </span>
                        {{/availableinfo}}
                            <button
                                class="btn btn-link py-3 px-4 align-items-center border-0 ws-toggle d-none d-sm-flex {{^expanded}}collapsed{{/expanded}}"
                                type="button"
                                data-toggle="collapse"
                                data-target="#sectioncontent-{{sectionnumber}}"
                                aria-expanded="{{#expanded}}true{{/expanded}}{{^expanded}}false{{/expanded}}"
                                aria-controls="sectioncontent-{{sectionnumber}}"
                            >
                                <span class="togglesectionicon collapsed-icon-container nomargin iconlarge">
                                    {{#pix}} t/collapsedcaret, core {{/pix}}
                                </span>
                                <span class="togglesectionicon expanded-icon-container nomargin iconlarge">
                                    {{#pix}} t/expanded, core {{/pix}}
                                </span>
                            </button>
                            <div class="d-flex flex-column">
                            <h3
                                class="sectionname pt-2 mt-1 iconlarge"
                                {{^editing}}
                                    data-toggle="collapse"
                                    data-target="#sectioncontent-{{sectionnumber}}"
                                    aria-expanded="{{#expanded}}true{{/expanded}}{{^expanded}}false{{/expanded}}"
                                    aria-controls="sectioncontent-{{sectionnumber}}"
                                {{/editing}}
                            >
                                {{{name}}}
                            </h3>
                                {{#summary}}
                                    <div class="d-flex align-items-center">
                                        <div class="sectionsummary pb-3">
                                            {{{summary}}}
                                        </div>
                                    </div>
                                {{/summary}}
                            </div>
                            <button
                                class="btn btn-link flex-fill p-3 pl-4 py-3 d-flex align-items-center course-section-toggle {{^expanded}}collapsed{{/expanded}}"
                                type="button"
                                data-toggle="collapse"
                                data-target="#sectioncontent-{{sectionnumber}}"
                                aria-expanded="{{#expanded}}true{{/expanded}}{{^expanded}}false{{/expanded}}"
                                aria-controls="sectioncontent-{{sectionnumber}}"
                            >
                                &nbsp;
                            </button>
                            <div class="pr-4 d-flex align-items-center">
                               {{#expandbtn}}
                                <div class="d-none d-sm-flex">
                                    <button id="expandaccordion"
                                        class="ml-auto mr-4 btn btn-link btn-sm"
                                        data-action="expand"
                                        data-expanded="0"
                                    >
                                        <span class="closed" data-region="collapsed-closed">
                                            {{#str}}expandall{{/str}}
                                        </span>
                                        <span class="open hidden" data-region="collapsed-open">
                                            {{#str}}collapseall{{/str}}
                                        </span>
                                    </button>
                                </div>
                                {{/expandbtn}}
                                {{{completion}}}
                            </div>

                        {{#editing}}
                        <div class="editoptions ml-auto align-self-stretch d-flex flex-column p-2">
                            {{{editsection}}}
                        </div>
                        {{/editing}}
                    </div>
                </div>

                <div
                    id="sectioncontent-{{sectionnumber}}"
                    class="sectioncontent collapse {{#expanded}}show{{/expanded}} "
                    aria-labelledby="section-{{sectionnumber}}"
                    data-region="sectioncollapse"
                    {{#accordion}}
                    data-parent="#formatwplist"
                    {{/accordion}}
                >
                    <div class="card-body bg-white p-0 {{^editing}}pb-4{{/editing}}">
                        {{{coursemodules}}}
                    </div>
                </div>
            </div>
        {{/sections}}
    </div>
    {{#addsection}}
        <div class="addsectionwrapper">
            {{{addsection}}}
        </div>
    {{/addsection}}
</div>
{{#js}}
require(
[
    'jquery',
    'format_wplist/main',
],
function(
    $,
    Main
) {
    var root = $('#format-wplist-{{uniqid}}');
    Main.init(root);
});
{{/js}}