{{!
    @template format_wplist/completionicon

    This template renders action menu for each course.

    Example context (json):
    {
        "hascompletion": true,
        "editing": false,
        "self": true,
        "auto": false,
        "imgalt": "completed when ...",
        "newstate": 1,
        "mod": {
            "id": 254,
            "name": "Activity One",
            "courseid": 3,
            "completionicon": "manual-n",
            "checked": false,
            "sectionnumber": 2
        }
    }
}}
{{#hascompletion}}
    {{#editing}}
        {{#self}}
            <div class="checkbox">
                <div class="checkbox-icon iconlarge nomargin">
                    {{#pix}}check-on-gray, format_wplist, {{imgalt}}{{/pix}}
                </div>
            </div>
        {{/self}}
        {{#auto}}
            <div class="checkbox">
                <div class="checkbox-icon iconlarge nomargin">
                    {{#pix}}check-on-dotted, format_wplist, {{imgalt}}{{/pix}}
                </div>
            </div>
        {{/auto}}
    {{/editing}}
    {{^editing}}
        {{#self}}
            <div class="checkbox" tabindex="0" role="button"
                data-region="completioncheck"
                data-targetstate="{{newstate}}"
                data-modulename="{{mod.name}}"
                data-module="{{mod.id}}"
                data-courseid="{{courseid}}"
                {{#reloadonchange}}
                    data-reloadonchange="1"
                {{/reloadonchange}}
                data-image="{{completionicon}}"
                data-checked="{{#checked}}1{{/checked}}{{^checked}}0{{/checked}}"
                data-sectionnumber="{{sectionnumber}}"
            >
                <div data-region="check" class="checkbox-icon">
                    {{#pix}}{{#checked}}check-on{{/checked}}{{^checked}}check-off{{/checked}}, format_wplist, {{imgalt}}{{/pix}}
                </div>
            </div>

        {{/self}}
        {{#auto}}
            <div class="checkbox">
                {{#checked}}
                <div class="checkbox-icon">
                    {{#pix}}check-green-dotted, format_wplist, {{imgalt}}{{/pix}}
                </div>
                {{/checked}}
                {{^checked}}
                <div data-region="checkoff" class="checkbox-icon {{#checked}}hidden{{/checked}}">
                    {{#pix}}check-off-dotted, format_wplist, {{imgalt}}{{/pix}}
                </div>
                {{/checked}}
            </div>
        {{/auto}}
    {{/editing}}
{{/hascompletion}}
