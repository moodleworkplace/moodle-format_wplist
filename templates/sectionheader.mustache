{{!
    @template format_wplist/sectionheader

    This template renders action menu for each course.

    Example context (json):
    {}
}}
<div class="d-flex">
    <div class="col-1">{{{leftcontent}}}</div>
    <a href="{{{sectionlink}}}"><h2>{{{sectiontitle}}}</h2></a>
    <div class="col-1">{{{rightcontent}}}</div>
    {{#editing}}
    <span class="editoptions ml-auto align-self-stretch p-2">
        editoptions
    </span>
    {{/editing}}
</div>
<div class="summary">
    <div class="no-overflow">
        {{{summary}}}
    </div>
</div>

